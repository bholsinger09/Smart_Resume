<div class="bg-white rounded-lg shadow-md p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Job Openings</h1>
    <%= link_to "Post New Job", new_job_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
  
  <% if @jobs.any? %>
    <div class="space-y-6">
      <% @jobs.each do |job| %>
        <div class="border rounded-lg p-6 hover:shadow-lg transition">
          <div class="flex justify-between items-start">
            <div class="flex-1">
              <h2 class="text-2xl font-semibold text-blue-600 mb-2">
                <%= link_to job.title, job_path(job) %>
              </h2>
              <p class="text-lg text-gray-700 mb-2"><%= job.company %></p>
              <p class="text-gray-600 mb-3">
                üìç <%= job.location || 'Remote' %> ‚Ä¢ 
                <%= job.employment_type || 'Full-time' %>
              </p>
              
              <p class="text-gray-700 mb-4">
                <%= truncate(job.description, length: 200) %>
              </p>
              
              <div class="flex flex-wrap gap-2 mb-3">
                <% job.skills.first(8).each do |skill| %>
                  <span class="bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full">
                    <%= skill.name %>
                  </span>
                <% end %>
                <% if job.skills.count > 8 %>
                  <span class="text-gray-500 text-sm">+<%= job.skills.count - 8 %> more</span>
                <% end %>
              </div>
            </div>
            
            <% if job.salary_max.present? %>
              <div class="text-right ml-4">
                <p class="text-sm text-gray-600">Salary Range</p>
                <p class="text-lg font-semibold text-green-600">
                  $<%= number_with_delimiter(job.salary_min) %> - $<%= number_with_delimiter(job.salary_max) %>
                </p>
              </div>
            <% end %>
          </div>
          
          <div class="mt-4 flex space-x-3">
            <%= link_to "View Details", job_path(job), class: "text-blue-600 hover:underline" %>
            <%= link_to "Edit", edit_job_path(job), class: "text-gray-600 hover:underline" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg">No jobs posted yet.</p>
      <%= link_to "Post the first job", new_job_path, class: "text-blue-600 hover:underline" %>
    </div>
  <% end %>
</div>
