<div class="bg-white rounded-lg shadow-md p-6">
  <div class="mb-6">
    <%= link_to "‚Üê Back to Jobs", jobs_path, class: "text-blue-600 hover:underline" %>
  </div>
  
  <div class="mb-8">
    <h1 class="text-3xl font-bold mb-2"><%= @job.title %></h1>
    <p class="text-xl text-gray-700 mb-2"><%= @job.company %></p>
    <p class="text-gray-600">
      üìç <%= @job.location || 'Remote' %> ‚Ä¢ <%= @job.employment_type || 'Full-time' %>
    </p>
    
    <% if @job.salary_max.present? %>
      <p class="text-lg text-green-600 font-semibold mt-2">
        üí∞ $<%= number_with_delimiter(@job.salary_min) %> - $<%= number_with_delimiter(@job.salary_max) %>
      </p>
    <% end %>
  </div>
  
  <div class="mb-8">
    <h2 class="text-2xl font-semibold mb-3">Description</h2>
    <p class="text-gray-700 whitespace-pre-line"><%= @job.description %></p>
  </div>
  
  <% if @job.requirements.present? %>
    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-3">Requirements</h2>
      <p class="text-gray-700 whitespace-pre-line"><%= @job.requirements %></p>
    </div>
  <% end %>
  
  <div class="mb-8">
    <h2 class="text-2xl font-semibold mb-3">Required Skills</h2>
    <div class="flex flex-wrap gap-2">
      <% @job.skills.each do |skill| %>
        <span class="bg-blue-100 text-blue-800 px-3 py-2 rounded-lg">
          <%= skill.name %>
        </span>
      <% end %>
    </div>
  </div>
  
  <% if @matches.any? %>
    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-3">Top Matches</h2>
      <div class="space-y-3">
        <% @matches.each do |match| %>
          <%= link_to match_path(match), class: "block" do %>
            <div class="border rounded p-4 hover:shadow-md transition">
              <div class="flex justify-between items-center">
                <div>
                  <p class="font-semibold"><%= match.resume.filename %></p>
                  <p class="text-sm text-gray-600">
                    <%= match.matched_skills.size %> matching skills
                  </p>
                </div>
                <div class="text-right">
                  <p class="text-3xl font-bold text-<%= match.score >= 70 ? 'green' : 'yellow' %>-600">
                    <%= match.match_percentage %>
                  </p>
                  <p class="text-sm text-gray-600"><%= match.match_level %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
  
  <div class="flex space-x-3">
    <%= link_to "Edit Job", edit_job_path(@job), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    <%= link_to "Delete Job", job_path(@job), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700" %>
  </div>
</div>
