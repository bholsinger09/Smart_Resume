<div class="bg-white rounded-lg shadow-md p-6">
  <h1 class="text-3xl font-bold mb-6"><%= @job.new_record? ? 'Post New Job' : 'Edit Job' %></h1>
  
  <%= form_with model: @job, class: "space-y-6" do |f| %>
    <% if @job.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <h2 class="font-bold mb-2"><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>
        <ul class="list-disc list-inside">
          <% @job.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div>
      <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    
    <div>
      <%= f.label :company, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :company, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    
    <div>
      <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_area :description, rows: 6, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    
    <div>
      <%= f.label :requirements, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_area :requirements, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    
    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :location, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :location, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      
      <div>
        <%= f.label :employment_type, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :employment_type, ['Full-time', 'Part-time', 'Contract', 'Freelance'], { include_blank: 'Select type' }, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>
    
    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :salary_min, "Minimum Salary", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.number_field :salary_min, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      
      <div>
        <%= f.label :salary_max, "Maximum Salary", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.number_field :salary_max, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>
    
    <div class="flex items-center">
      <%= f.check_box :active, class: "mr-2" %>
      <%= f.label :active, "Active Job Posting", class: "text-sm font-medium text-gray-700" %>
    </div>
    
    <div class="flex space-x-3">
      <%= f.submit class: "bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
      <%= link_to "Cancel", jobs_path, class: "bg-gray-200 text-gray-800 px-6 py-2 rounded hover:bg-gray-300" %>
    </div>
  <% end %>
</div>
