<div class="space-y-8">
  <!-- Hero Section -->
  <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-lg shadow-2xl p-8 border border-gray-700">
    <h1 class="text-4xl font-bold text-white mb-4">
      Welcome to SmartResume
    </h1>
    <p class="text-xl text-gray-300 mb-6">
      AI-powered resume matching to find your perfect job fit
    </p>
    
    <div class="flex space-x-4">
      <%= link_to "Upload Resume", resumes_path, class: "bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-500 transition shadow-lg" %>
      <%= link_to "Browse Jobs", jobs_path, class: "bg-gray-700 text-gray-100 px-6 py-3 rounded-lg hover:bg-gray-600 transition" %>
    </div>
  </div>
  
  <!-- Recent Jobs -->
  <div class="bg-gray-800 rounded-lg shadow-xl p-6 border border-gray-700">
    <h2 class="text-2xl font-bold mb-4 text-white">Recent Job Openings</h2>
    
    <% if @jobs.any? %>
      <div class="space-y-4">
        <% @jobs.each do |job| %>
          <div class="border-b border-gray-700 pb-4">
            <h3 class="text-lg font-semibold text-blue-400 hover:text-blue-300 transition">
              <%= link_to job.title, job_path(job) %>
            </h3>
            <p class="text-gray-300"><%= job.company %></p>
            <p class="text-sm text-gray-400">
              <%= job.location %> â€¢ <%= job.employment_type %>
            </p>
            <div class="mt-2">
              <span class="text-sm text-gray-400">Skills: </span>
              <% job.skills.first(5).each do |skill| %>
                <span class="inline-block bg-blue-900/50 text-blue-300 text-xs px-2 py-1 rounded mr-1 border border-blue-700">
                  <%= skill.name %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-400">No jobs available yet.</p>
    <% end %>
  </div>
  
  <!-- Recent Matches -->
  <% if @recent_matches.any? %>
    <div class="bg-gray-800 rounded-lg shadow-xl p-6 border border-gray-700">
      <h2 class="text-2xl font-bold mb-4 text-white">Recent Matches</h2>
      
      <div class="space-y-3">
        <% @recent_matches.each do |match| %>
          <div class="flex justify-between items-center p-3 border border-gray-700 rounded bg-gray-900/50 hover:bg-gray-900 transition">
            <div>
              <p class="font-semibold text-gray-100"><%= match.job.title %></p>
              <p class="text-sm text-gray-400"><%= match.resume.filename %></p>
            </div>
            <div class="text-right">
              <span class="text-2xl font-bold text-<%= match.score >= 70 ? 'green' : 'yellow' %>-400">
                <%= match.match_percentage %>
              </span>
              <p class="text-sm text-gray-400"><%= match.match_level %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
