<div class="space-y-8">
  <!-- Hero Section -->
  <div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">
      Welcome to SmartResume
    </h1>
    <p class="text-xl text-gray-600 mb-6">
      AI-powered resume matching to find your perfect job fit
    </p>
    
    <div class="flex space-x-4">
      <%= link_to "Upload Resume", resumes_path, class: "bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700" %>
      <%= link_to "Browse Jobs", jobs_path, class: "bg-gray-200 text-gray-800 px-6 py-3 rounded-lg hover:bg-gray-300" %>
    </div>
  </div>
  
  <!-- Recent Jobs -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-2xl font-bold mb-4">Recent Job Openings</h2>
    
    <% if @jobs.any? %>
      <div class="space-y-4">
        <% @jobs.each do |job| %>
          <div class="border-b pb-4">
            <h3 class="text-lg font-semibold text-blue-600">
              <%= link_to job.title, job_path(job) %>
            </h3>
            <p class="text-gray-600"><%= job.company %></p>
            <p class="text-sm text-gray-500">
              <%= job.location %> â€¢ <%= job.employment_type %>
            </p>
            <div class="mt-2">
              <span class="text-sm text-gray-600">Skills: </span>
              <% job.skills.first(5).each do |skill| %>
                <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded mr-1">
                  <%= skill.name %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">No jobs available yet.</p>
    <% end %>
  </div>
  
  <!-- Recent Matches -->
  <% if @recent_matches.any? %>
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-2xl font-bold mb-4">Recent Matches</h2>
      
      <div class="space-y-3">
        <% @recent_matches.each do |match| %>
          <div class="flex justify-between items-center p-3 border rounded">
            <div>
              <p class="font-semibold"><%= match.job.title %></p>
              <p class="text-sm text-gray-600"><%= match.resume.filename %></p>
            </div>
            <div class="text-right">
              <span class="text-2xl font-bold text-<%= match.score >= 70 ? 'green' : 'yellow' %>-600">
                <%= match.match_percentage %>
              </span>
              <p class="text-sm text-gray-600"><%= match.match_level %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
