<div class="bg-white rounded-lg shadow-md p-6">
  <h1 class="text-3xl font-bold mb-6">All Matches</h1>
  
  <% if @matches.any? %>
    <div class="space-y-4">
      <% @matches.each do |match| %>
        <%= link_to match_path(match), class: "block" do %>
          <div class="border rounded-lg p-6 hover:shadow-lg transition">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <div class="mb-4">
                  <h3 class="text-xl font-semibold text-gray-900 mb-1">
                    <%= match.job.title %>
                  </h3>
                  <p class="text-gray-600"><%= match.job.company %></p>
                </div>
                
                <div class="mb-3">
                  <p class="text-sm text-gray-600 mb-1">Resume:</p>
                  <p class="font-medium"><%= match.resume.filename %></p>
                </div>
                
                <div class="flex items-center space-x-4 text-sm">
                  <span class="text-green-600 font-medium">
                    ✓ <%= match.matched_skills.size %> matched
                  </span>
                  <% if match.missing_skills.any? %>
                    <span class="text-yellow-600">
                      ⚠ <%= match.missing_skills.size %> missing
                    </span>
                  <% end %>
                  <span class="text-gray-500">
                    <%= time_ago_in_words(match.created_at) %> ago
                  </span>
                </div>
              </div>
              
              <div class="text-right ml-6">
                <p class="text-5xl font-bold text-<%= match.score >= 70 ? 'green' : match.score >= 50 ? 'yellow' : 'red' %>-600 mb-1">
                  <%= match.match_percentage %>
                </p>
                <p class="text-sm text-gray-600 font-medium"><%= match.match_level %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg mb-4">No matches yet.</p>
      <p class="text-gray-400 mb-6">Upload a resume and match it with a job to get started!</p>
      <div class="flex justify-center space-x-4">
        <%= link_to "Upload Resume", resumes_path, class: "bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700" %>
        <%= link_to "Browse Jobs", jobs_path, class: "bg-gray-200 text-gray-800 px-6 py-2 rounded hover:bg-gray-300" %>
      </div>
    </div>
  <% end %>
</div>
